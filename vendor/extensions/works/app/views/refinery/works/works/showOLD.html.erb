<% content_for :body_content_title do %>
  <%= @work.name %>
<% end %>

<% content_for :body do %>
  <!-- OUR WORK SECTION -->        
<div class="container-fluid">
  <div class="row no-gutter">
    <div class="col-sm-8">
      <div>&nbsp;</div>
    </div>
    <div class="col-sm-4">
        <div class="royalSlider sliderWorks rsDefault">
          <%= image_tag(@work.img_1_id) %>
          <%= image_tag(@work.img_2_id) %>
        </div><!-- royalSliderMini -->

      <div class="works-content"><span class="works-title"><%=raw @work.name %></span><br><%=raw @work.year %></div>
      <div><%=raw @work.location %></div>
      <div><%=raw @work.description %></div>Hello.
    </div>
  </div><!-- /row -->
</div><!-- /container -->
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="works">
      <% @works.each do |work| %>
        <li>
          <%= link_to work.name, refinery.works_work_path(work) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
