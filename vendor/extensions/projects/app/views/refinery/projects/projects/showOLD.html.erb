<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="projects">
      <% @projects.each do |project| %>
        <li>
          <%= link_to project.name, refinery.projects_project_path(project) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

