<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(project) -%>">
  <span class='title'>
    <%= project.name %>
  </span>

  <span class='preview'></span>

  <span class='actions'>
    <%= action_icon(:preview, refinery.projects_project_path(project), t('.view_live_html')) %>
    <%= action_icon(:edit,    refinery.edit_projects_admin_project_path(project), t('.edit') ) %>
    <%= action_icon(:delete,  refinery.projects_admin_project_path(project), t('.delete'),
      { class: "cancel confirm-delete",
        data: {confirm: t('message',  scope: 'refinery.admin.delete', title: project.name)}}  ) %>
  </span>
</li>
