<%= form_for [refinery, :projects_admin, @project] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @project,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location -%>
  </div>

  <div class='field'>
    <%= f.label :year -%>
    <%= f.date_select :year -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "projects/project" -%>
  </div>

  <div class='field'>
    <%= f.label :img_url -%>
    <%= f.text_field :img_url -%>
  </div>

  <div class='field'>
    <%= f.label :img_1 -%>
    <%= f.text_field :img_1 -%>
  </div>

  <div class='field'>
    <%= f.label :img_2 -%>
    <%= f.text_field :img_2 -%>
  </div>

  <div class='field'>
    <%= f.label :img_3 -%>
    <%= f.text_field :img_3 -%>
  </div>

  <div class='field'>
    <%= f.label :img_4 -%>
    <%= f.text_field :img_4 -%>
  </div>

  <div class='field'>
    <%= f.label :img_5 -%>
    <%= f.text_field :img_5 -%>
  </div>

  <div class='field'>
    <%= f.label :img_6 -%>
    <%= f.text_field :img_6 -%>
  </div>

  <div class='field'>
    <%= f.label :img_7 -%>
    <%= f.text_field :img_7 -%>
  </div>

  <div class='field'>
    <%= f.label :img_8 -%>
    <%= f.text_field :img_8 -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.projects.admin.projects.project'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @project.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
