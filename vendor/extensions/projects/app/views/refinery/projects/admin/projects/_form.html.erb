<%= form_for [refinery, :projects_admin, @project] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @project,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :location -%>
    <%= f.text_field :location -%>
  </div>

  <div class='field'>
    <%= f.label :year -%>
    <%= f.text_field :year -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:description],
                :object => "projects/project" -%>
  </div>

  <div class='field'>
    <%= f.label :img_1 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_1_id,
               :image => @project.img_1,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :img_2 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_2_id,
               :image => @project.img_2,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :img_3 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_3_id,
               :image => @project.img_3,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :img_4 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_4_id,
               :image => @project.img_4,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :img_5 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_5_id,
               :image => @project.img_5,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :img_6 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_6_id,
               :image => @project.img_6,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :img_7 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_7_id,
               :image => @project.img_7,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :img_8 -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_8_id,
               :image => @project.img_8,
               :toggle_image_display => false -%>
  </div>

  <div class='field'>
    <%= f.label :img_home -%>
    <%= render '/refinery/admin/image_picker',
               :f => f,
               :field => :img_home_id,
               :image => @project.img_home,
               :toggle_image_display => false -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.projects.admin.projects.project'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @project.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
